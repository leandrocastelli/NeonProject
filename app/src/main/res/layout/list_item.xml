<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    card_view:cardCornerRadius="0dp"
    card_view:cardUseCompatPadding="false"
    card_view:cardBackgroundColor="@color/colorBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:clickable="true"
        android:id="@+id/relative_layout_holder"
        android:background="?android:attr/selectableItemBackground">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="64dp" android:layout_height="64dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp"

            android:src="@android:color/transparent" android:id="@+id/contactPicture"
            />
        <TextView
            android:id="@+id/lettersWorkAround"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp"
            android:textSize="40dp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:padding="4dp"
            />

        <TextView
            android:id="@+id/contactName"
            android:text="Mock Name"
            android:padding="4dp"
            android:layout_toRightOf="@id/contactPicture"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName"
            android:layout_alignLeft="@id/contactName"
            android:text="(11)98021-8824"
            android:textAppearance="?android:textAppearanceMedium"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/historyInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactNumber"
            android:layout_alignLeft="@id/contactName"
            android:text=""
            android:textAppearance="?android:textAppearanceSmall"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>