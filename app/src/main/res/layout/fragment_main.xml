<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lcs.neonproject.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="144dp" android:layout_height="144dp"
        android:paddingTop="72dp"
        android:layout_marginTop="72dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"

        android:src="@drawable/phelps" android:id="@+id/profilePicture"
        />
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michael Phelps"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="@color/colorBackground"
        android:layout_below="@id/profilePicture"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phelps@olympics.com"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textColor="@color/colorBackground"
        android:layout_below="@id/txtName"
        android:layout_centerHorizontal="true"/>

    <!--ToDo Improve feedback-->
    <Button
        android:id="@+id/btnHistory"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/history"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/buttonbackground"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        />
    <Button
        android:id="@+id/btnSendMoney"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/send_money"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/buttonbackground"
        android:textAllCaps="true"
        android:layout_gravity="bottom"
        android:layout_above="@id/btnHistory"
        android:layout_margin="16dp"
        />


</RelativeLayout>
